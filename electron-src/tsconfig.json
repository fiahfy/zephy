{
  "extends": "@fiahfy/tsconfig/tsconfig",
  "compilerOptions": {
    // Type Checking
    "noUncheckedIndexedAccess": true,
    // Modules
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "~/*": ["./*"]
    },
    // Emit
    "noEmit": false,
    "outDir": "../main",
    // JavaScript Support
    "allowJs": true,
    // Interop Constraints
    "isolatedModules": true,
    // Language and Environment
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "target": "esnext",
    // Completeness
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules"]
}
