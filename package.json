{
  "name": "zephy",
  "description": "Simple Media File Manager based on Electron.",
  "version": "0.0.1",
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.5",
    "@mui/icons-material": "^5.14.1",
    "@mui/lab": "^5.0.0-alpha.137",
    "@mui/material": "^5.14.1",
    "@reduxjs/toolkit": "^1.9.5",
    "chokidar": "^3.5.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-window-state": "^5.0.3",
    "ffmpeg-static-electron": "^2.0.3",
    "ffprobe-static-electron": "^2.0.2",
    "file-url": "^4.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "mime-types": "^2.1.35",
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.1",
    "react-virtualized": "^9.22.5",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@fiahfy/eslint-config-next": "^0.0.21",
    "@fiahfy/prettier-config": "^0.0.3",
    "@fiahfy/tsconfig": "^0.0.2",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.4.3",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-redux": "^7.1.25",
    "@types/react-virtualized": "^9.21.22",
    "babel-plugin-import": "^1.13.6",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  },
  "main": "main/index.js",
  "private": true,
  "productName": "Zephy",
  "resolutions": {
    "@types/react": "^18.0.20"
  },
  "scripts": {
    "build": "npm run build-renderer && npm run build-electron",
    "build-electron": "tsc -p electron-src",
    "build-renderer": "next build renderer && next export renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "format": "prettier -c --ignore-path .gitignore .",
    "lint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "package": "npm run build && electron-builder",
    "package-dir": "npm run build && electron-builder --dir",
    "prepare": "husky install",
    "release": "npm run build && electron-builder -mlw -c.snap.publish=github",
    "test": "npm run format && npm run lint"
  }
}
