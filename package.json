{
  "name": "zephy",
  "description": "Simple Media File Manager based on Electron.",
  "version": "0.0.1",
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.6",
    "@mui/lab": "^5.0.0-alpha.141",
    "@mui/material": "^5.14.6",
    "@reduxjs/toolkit": "^1.9.5",
    "@tanstack/react-virtual": "^3.0.0-beta.60",
    "chokidar": "^3.5.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-window-state": "^5.0.3",
    "ffmpeg-static-electron": "^2.0.3",
    "ffprobe-static-electron": "^2.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.1",
    "mime": "^3.0.0",
    "next": "13.4.7",
    "plist": "^3.1.0",
    "pluralize": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@fiahfy/eslint-config-next": "^0.0.21",
    "@fiahfy/prettier-config": "^0.0.3",
    "@fiahfy/tsconfig": "^0.0.2",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/mime": "^3.0.1",
    "@types/node": "^20.5.6",
    "@types/plist": "^3.0.2",
    "@types/pluralize": "^0.0.30",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-redux": "^7.1.26",
    "babel-plugin-import": "^1.13.8",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "main": "main/index.js",
  "private": true,
  "productName": "Zephy",
  "resolutions": {
    "@types/react": "^18.0.20"
  },
  "scripts": {
    "build": "npm run build-renderer && npm run build-electron",
    "build-electron": "tsc -p electron-src",
    "build-renderer": "next build renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "format": "prettier -c --ignore-path .gitignore .",
    "lint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "package": "npm run build && electron-builder",
    "package-dir": "npm run build && electron-builder --dir",
    "prepare": "husky install",
    "release": "npm run build && electron-builder -mlw -c.snap.publish=github",
    "test": "npm run format && npm run lint && npm run type-check",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  }
}
